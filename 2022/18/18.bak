    if (x+1, y, z) not in cubes:
        exposed_sides += 1
    # check y
    if (x, y-1, z) not in cubes:
        exposed_sides += 1
    if (x, y+1, z) not in cubes:
        exposed_sides += 1
    # check z
    if (x, y, z-1) not in cubes:
        exposed_sides += 1
    if (x, y, z+1) not in cubes:
        exposed_sides += 1

