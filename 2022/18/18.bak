with open("input", "r") as fp:
    lines = [line.strip() for line in fp]

cubes = []
maxx = 0
maxy = 0
maxz = 0
minx = 20
miny = 20
minz = 20
for line in lines:
    x, y, z = [int(c) for c in line.split(',')]
    if x > maxx:
        maxx = x
    if x < minx:
        minx = x
    if y > maxy:
        maxy = y
    if y < miny:
        miny = y
    if z > maxz:
        maxz = z
    if z < minz:
        minz = z
    cubes.append((x, y, z))

print(minx, maxx)
print(miny, maxy)
